{
	"name": "@live-html-editor/text-wrap",
	"version": "0.2.3",
	"description": "A utility to wrap (break) long lines of large texts into limited-length lines, based on given options",
	"main": "dist/text-wrap.umd.js",
	"module": "dist/text-wrap.esm.js",
	"types": "dist/types/TextWrap.d.ts",
	"scripts": {
		"lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
		"test:dev": "jest",
		"test:watch": "jest --watch",
		"test": "jest --coverage --no-cache",
		"prebuild": "rimraf dist",
		"start": "rollup --config --watch",
		"build:dev": "rollup --config --environment BUILD:development",
		"build": "rollup --config --environment BUILD:production",
		"tsc": "tsc --module commonjs",
		"tsc:watch": "tsc --module commonjs --watch",
		"commit": "git-cz",
		"semantic-release": "semantic-release"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/live-html-editor/TextWrap.git"
	},
	"keywords": [
		"editor",
		"wrapper",
		"wrap-long-lines",
		"break-long-lines",
		"dev4dev"
	],
	"author": "S. M. Mir-Ismaili <s.m.mirismaili@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/live-html-editor/TextWrap/issues"
	},
	"homepage": "https://github.com/live-html-editor/TextWrap#readme",
	"prettier": {
		"semi": false,
		"singleQuote": true
	},
	"devDependencies": {
		"@types/jest": "^24.0.12",
		"commitizen": "^3.1.1",
		"cz-conventional-changelog": "^2.1.0",
		"jest": "^24.7.1",
		"jest-config": "^24.7.1",
		"js-sha256": "^0.9.0",
		"lodash.camelcase": "^4.3.0",
		"rimraf": "^2.6.3",
		"rollup": "^1.10.1",
		"rollup-plugin-commonjs": "^9.3.4",
		"rollup-plugin-node-resolve": "^4.2.3",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"rollup-plugin-terser": "^4.0.4",
		"rollup-plugin-typescript2": "^0.21.0",
		"semantic-release": "^15.13.14",
		"temp-dir": "^2.0.0",
		"ts-jest": "^24.0.2",
		"tslint": "^5.16.0",
		"tslint-config-prettier": "^1.18.0",
		"tslint-config-standard": "^8.0.1",
		"typescript": "^3.4.3"
	},
	"dependencies": {},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
